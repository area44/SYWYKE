---
import { Font } from "astro:assets";
import { ClientRouter } from "astro:transitions";

import "@/styles/global.css";

export type Props = {
  title?: string;
  description?: string;
};

const {
  title = "Sites You Wish You Knew Earlier!",
  description = "A curated collection of underrated websites by AREA44",
} = Astro.props;

const siteUrl = Astro.site;
const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const ogImage = new URL("og-image.png", siteUrl).toString();
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  <meta name="robots" content="index, follow" />
  <meta name="generator" content={Astro.generator} />

  <link rel="canonical" href={canonicalURL} />

  <link
    rel="icon"
    href={new URL("favicon.ico", siteUrl).toString()}
    sizes="any"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href={new URL("favicon-16x16.png", siteUrl).toString()}
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href={new URL("favicon-32x32.png", siteUrl).toString()}
  />
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href={new URL("apple-touch-icon.png", siteUrl).toString()}
  />
  <link rel="manifest" href={new URL("site.webmanifest", siteUrl).toString()} />
  <meta name="theme-color" content="#ffffff" />

  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />

  <link rel="stylesheet" href="/pagefind/pagefind-ui.css" />
  <script is:inline src="/pagefind/pagefind-ui.js"></script>

  <ClientRouter />

  <Font cssVariable="--font-geist" preload />
</head>
